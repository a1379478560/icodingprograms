.video-box {
    margin-top: 0rpx;
    height: 700rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: 10rpx;
    border-right: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 300ms ease;
    background-color: wheat; 
}
.video_caption {
    margin-top: 50rpx;
    font-size: 32rpx;
    color: #ff6100;
    background-color: wheat; 
    align-items: stretch;
}
.video_introduce {
    margin-top: 20rpx;
    font-size: 27rpx;
    color: #000000;
    background-color: wheat; 
    align-items: stretch;
    text-align: justify;
}