}
/**拨打电话**/
.phonecall {
    margin-top: 40rpx;
    height: 80rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}
.phoneicon {
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx;
    
}
.phonenum {
    font-size: 32rpx;
    color: #FF6100;
    background-color: white; 
}

