/**index.wxss**/

/**轮播图**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
/**拨打电话**/
.phonecall {
    margin-top: 40rpx;
    height: 80rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}
.phoneicon {
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx;
    
}
.phonenum {
    font-size: 32rpx;
    color: #FF6100;
    background-color: white; 
}

/**导航**/
.navigator {
    margin-top: 20rpx;
    height: 200rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}
.navigateitem {
    width: 188rpx;
