/**index.wxss**/

/**轮播图**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
/**拨打电话**/
.phonecall {
    margin-top: 5rpx;
    height: 60rpx;
    width: 100%;
    background: #FFF;
    /* border: 1px solid rgba(0, 0, 0, .1); */
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    padding-left: 50rpx;
}
.phoneicon {
    margin-top: 20rpx;
    width: 32rpx;
    height: 32rpx;
    margin: 10rpx;
    
}
.phonenum {
    font-size: 32rpx;
    color: #FF6100;
    background-color: white; 
}

/**导航**/
.navigator {
    margin-top: 10rpx;
    height: 190rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
    padding-left:0rpx; 
}
.navigateitem {
    width: 188rpx;
    height: 130rpx;
    margin: 10rpx;
    display: flex;
    flex-direction: column;
    padding-left:8rpx; 
    align-items: center;
    text-align: center;
}
.navicon {
    width: 100rpx;
    height: 100rpx;
    margin: 0rpx;
    align-items: center;

}
.navitxt {
    width: 100%;
    height: 30rpx;
    margin: 0rpx;
    align-items: center;

}
